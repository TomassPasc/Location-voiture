{% extends 'base.html.twig' %}


{% block title %}Location{% endblock %}

{% block monTitre %}Location {% endblock %}

{% block body %}
<div class="row">
  <div class="col-4">
    <img src="{{asset('images/' ~ location.voiture.modele.image)}}" class="img-thumbnail">
  </div>
  <div class="col">
      <p>début location: {{location.debut|date("d/m/Y")}}</p>
      <p>fin location: {{location.fin|date("d/m/Y")}}</p>
      <p>nombre de jours réservé: {{jours}}</p>
      <p>Prix/jours: {{location.voiture.modele.prixMoyen}}</p>
      <p>Prix total: {{location.voiture.modele.prixMoyen * jours}}</p>
  </div>
</div>





{% endblock %}

