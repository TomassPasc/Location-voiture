{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block monTitre %}Contact{% endblock %}


{% block body %}

<h2>Formulaire de contact</h2>


    <form action="/contact" method="post">

        <div class="form-group">
            <label>Email</label>
            <input name="email"type="email" class="form-control" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label>Sujet</label>
            <input name="sujet"type="text" class="form-control" placeholder="sujet">
        </div>

        <div class="form-group">
            <label>Message</label>
            <textarea name="message" class="form-control" rows="3"></textarea>
        </div>
        <input type="submit" class="btn btn-secondary mt-2" name="submit" value="Envoyer"/>
    </form>

{% endblock %}

